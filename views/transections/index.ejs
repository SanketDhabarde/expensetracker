<%-include("../partials/header")%>


<div class="container">
    <div class="container-center">
        <h2 class="mb-2">Expense Tracker of <%= currentUser.username %></h2>
        <hr>
        <%var total=0, income=0, expense=0;  %>
        <% user.transections.forEach(function(trans){ %>
           <% total+=trans.amount; %>
           <%if(trans.amount < 0){ %>
                <%expense+=trans.amount %>
            <% }else{ %>
                <%income+=trans.amount%>
           <% }%>
        <% }) %> 
        <h5>YOUR BALANCE</h5>
        <p id="balance"><strong>Rs. <%= total%></strong></p>
            <div class="card card-display" style="width: 12rem;">
                <div class="card-body alert-success">
                  <h5 class="card-title">Income</h5>
                    <p class="card-text">Rs. <%= income %></p>
                </div>
            </div>
            <br>
            <div class="card card-display" style="width: 12rem;">
                <div class="card-body alert-danger">
                  <h5 class="card-title">Expense</h5>
                  <p class="card-text">Rs. <%= expense %></p>
                </div>
            </div>
        <a class="btn btn-primary mt-2 mb-2" href="/transections/<%= user._id %>/new">Add new transection</a>
        <h5>History</h5>
        <hr>
        <% user.transections.forEach(function(trans){ %>
                <div class="mb-2">
                    <strong><%= trans.text%> </strong> <span class="text-right"><%= trans.amount %>
                    <a href="/transections/<%= user._id %>/<%= trans._id %>/edit"><i class="far fa-edit"></i></a>
                    <form id="deleteForm" action="/transections/<%=currentUser._id%>/<%=trans._id%>?_method=DELETE" method="POST">
                        <button><i class="fas fa-trash-alt"></i></button>
                    </form>
                </span> 
                </div>
        <% }) %> 
    </div>
</div>


<%-include("../partials/footer")%>